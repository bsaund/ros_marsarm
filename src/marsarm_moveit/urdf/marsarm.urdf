<?xml version="1.0"?>
<robot name="Mars_Arm">
  <!-- ============== LINKS ================== -->
  <link name="base_plate">
    <visual>
      <geometry>
	<box size="0.1 0.1 0.0"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="base">
    <visual>
      <geometry>
	<cylinder length="0.3" radius="0.06"/>
      </geometry>
      <origin xyz="0 0 0.15"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="shoulder">
    <visual>
      <geometry>
	<cylinder length="0.15" radius="0.04"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="main_arm">
    <visual>
      <geometry>
	<cylinder length="0.3" radius="0.06"/>
      </geometry>
      <origin xyz="0 0 0.15"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="elbow">
    <visual>
      <geometry>
	<cylinder length="0.15" radius="0.04"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="forearm">
    <visual>
      <geometry>
	<cylinder length="0.3" radius="0.06"/>
      </geometry>
      <origin xyz="0 0 0.15"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>


  <link name="wrist">
    <visual>
      <geometry>
	<cylinder length="0.15" radius="0.04"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="hand">
    <visual>
      <geometry>
	<cylinder length="0.1" radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="probe_body">
    <visual>
      <geometry>
	<cylinder length="0.1" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="Gray">
	<color rgba=".5 .5 .5 1"/>
      </material>
    </visual>
  </link>

  <link name="probe_tip">
    <visual>
      <geometry>
	<sphere radius="0.02"/>
      </geometry>
      <material name="White">
	<color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>




<!-- ============== JOINTS ================== -->
  <joint name="base_plate_to_base" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.2" upper="3.2" velocity="0.5"/>
    <parent link="base_plate"/>
    <child link="base"/>n
    <origin xyz="0 0 0"/>
  </joint>
  

  <joint name="base_to_shoulder" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-1.6" upper="0.6" velocity="0.5"/>
    <parent link="base"/>
    <child link="shoulder"/>
    <origin xyz="0 .1 .3"/>
  </joint>

  <joint name="shoulder_to_main_arm" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.2" upper="3.2" velocity="0.5"/>
    <parent link="shoulder"/>
    <child link="main_arm"/>
    <origin xyz="0 -.1 0"/>
  </joint>

  <joint name="main_arm_to_elbow" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-1.6" upper="0.6" velocity="0.5"/>
    <parent link="main_arm"/>
    <child link="elbow"/>
    <origin xyz="0 .1 .3"/>
  </joint>

  <joint name="elbow_to_forearm" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.2" upper="3.2" velocity="0.5"/>
    <parent link="elbow"/>
    <child link="forearm"/>
    <origin xyz="0 -.1 0"/>
  </joint>

  <joint name="forearm_to_wrist" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-1.6" upper="0.6" velocity="0.5"/>
    <parent link="forearm"/>
    <child link="wrist"/>
    <origin xyz="0 .1 .3"/>
  </joint>

  <joint name="wrist_to_hand" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.2" upper="3.2" velocity="0.5"/>
    <parent link="wrist"/>
    <child link="hand"/>
    <origin xyz="0 -.1 0"/>
  </joint>

  <joint name="hand_to_probe" type="fixed">
    <parent link="hand"/>
    <child link="probe_body"/>
    <origin xyz="0 0 .1"/>
  </joint>

  <joint name="probe_to_probe_tip" type="fixed">
    <parent link="probe_body"/>
    <child link="probe_tip"/>
    <origin xyz="0 0 .1"/>
  </joint>
    





</robot>
